<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="15dp"
        tools:context=".activities.Splash">

        <ImageView
            android:src="@drawable/splashlogo"
            android:layout_width="309dp"
            android:layout_height="60dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mega App Developers Pvt Ltd"
            android:textSize="17sp"
            android:gravity="center" />

    </TableLayout>


    <Button
        android:id="@+id/lock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dip"
        android:background="@drawable/lock" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="100dip"
        android:gravity="center"
        android:horizontalSpacing="10dip"
        android:numColumns="auto_fit"
        android:padding="30dip"
        android:layout_below="@+id/lock"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dip"></GridView>

    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle">

        <Button
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/all_apps_button_icon" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aa000000">

            <GridView
                android:id="@+id/all_apps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="128dip"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"></GridView>
        </LinearLayout>
    </SlidingDrawer>

</RelativeLayout>